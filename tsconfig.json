{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./",
    "strict": false,
    "baseUrl": "./src",
    "paths": {
      "~modules/*": [
        "modules/*"
      ],
      "~config/*": [
        "config/*"
      ],
      "~shared/*": [
        "shared/*"
      ],
      "~errors/*": [
        "errors/*"
      ],
      "~utils/*": [
        "utils/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules"
  ]
}
